@model ArtistLibrary.Models.Models.DTOs.GroupDetailsDTO

@{
    ViewBag.Title = "Add Group Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        body {
            background: linear-gradient(135deg, #ff7e5f, #feb47b);
            font-family: Arial, sans-serif;
            color: white;
            text-align: center;
            margin: 0;
            padding: 20px;
        }

        h2 {
            font-size: 2.5rem;
            margin-bottom: 40px;
            font-family: Georgia, serif;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            font-weight: bold;
        }

        .form-group {
            margin-bottom: 1rem;
            text-align: left; /* Aligns labels to the left for better appearance */
        }

            .form-group label {
                display: block;
                margin-bottom: 0.5rem;
            }

        .form-control {
            width: 100%;
            padding: 0.5rem;
            margin-bottom: 0.5rem;
            border: 1px solid #ddd;
            border-radius: 5px;
            background: #333;
            color: white;
        }

        .text-danger {
            color: red;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            border-radius: 25px;
            background-color: #333;
            color: white;
            font-size: 1rem;
            font-weight: bold;
            text-transform: uppercase;
            text-decoration: none;
            transition: background-color 0.3s, box-shadow 0.3s;
            margin-top: 20px;
        }

            .btn:hover {
                background-color: #444;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            }

        form {
            max-width: 500px;
            margin: 0 auto;
            background: #444;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }
    </style>
</head>
<body>
    <h2>@ViewBag.Title</h2>

    <form asp-action="AddGroupDetails" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="GroupId" />

        <div class="form-group">
            <label asp-for="MemberStageName">Member Stage Name:</label>
            <input asp-for="MemberStageName" class="form-control" required />
            <span asp-validation-for="MemberStageName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MemberRealName">Member Real Name:</label>
            <input asp-for="MemberRealName" class="form-control" required />
            <span asp-validation-for="MemberRealName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MemberAnniversary">Member Anniversary:</label>
            <input asp-for="MemberAnniversary" class="form-control" placeholder="dd/mm/yyyy" required />
            <span asp-validation-for="MemberAnniversary" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MemberNationality">Member Nationality:</label>
            <input asp-for="MemberNationality" class="form-control" required />
            <span asp-validation-for="MemberNationality" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MemberPosition">Member Position:</label>
            <input asp-for="MemberPosition" class="form-control" required />
            <span asp-validation-for="MemberPosition" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MemberPhoto">Member Photo (URL):</label>
            <input asp-for="MemberPhoto" class="form-control" placeholder="Paste the photo link here" required />
            <span asp-validation-for="MemberPhoto" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MemberInstagram">Member Instagram:</label>
            <input asp-for="MemberInstagram" class="form-control" />
            <span asp-validation-for="MemberInstagram" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Add Member</button>
        <a asp-action="GetDetails" asp-route-groupId="@Model.GroupId" class="btn btn-secondary">Cancel</a>
    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
