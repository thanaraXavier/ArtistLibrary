@model ArtistsWiki.Models.Models.ViewModels.GroupVM

@{
    ViewData["Title"] = "All Groups";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #ff7e5f, #feb47b);
            color: white;
            text-align: center;
            margin: 0;
            padding: 20px;
        }

        h2 {
            font-size: 2.5rem; /* Aumenta o tamanho da fonte */
            margin-bottom: 45px; /* Aumenta o espaço entre o título e os cards */
            font-family: Georgia, serif;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            font-weight: bold;
        }

        .group-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        .group-card {
            background: #333;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
            overflow: hidden;
            width: 220px; /* Largura dos cards */
            text-align: center;
            color: inherit;
        }

            .group-card img {
                width: 100%;
                height: 200px; /* Altura das imagens */
                object-fit: cover;
            }

            .group-card .info {
                padding: 10px;
            }

            .group-card .name {
                font-weight: bold;
                margin-bottom: 5px;
            }

            .group-card .debut-date, .group-card .genre {
                color: #ccc;
            }

        .btn {
            display: inline-block;
            margin-top: 40px; /* Espaço entre o botão e os cards */
            padding: 8px 16px;
            border-radius: 25px;
            background-color: #333; /* Cor do botão */
            color: white; /* Cor do texto do botão */
            font-size: 1rem;
            font-weight: bold;
            text-decoration: none;
            text-transform: uppercase;
            transition: background-color 0.3s, box-shadow 0.3s;
        }

            .btn:hover {
                background-color: #444; /* Cor um pouco mais clara para o efeito de hover */
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            }
    </style>
</head>
<body>
    <h2>@ViewData["Title"]</h2>
    <div class="group-container">
        @foreach (var group in Model.Groups)
        {
            <div class="group-card">
                <img src="@group.GroupPhoto" alt="Photo of @group.GroupName" />
                <div class="info">
                    <div class="name">@group.GroupName</div>
                    <div class="debut-date">Debut date: @group.GroupDebutDate</div>
                    <div class="genre">Genre: @group.GroupMusicGenre</div>
                </div>
            </div>
        }
    </div>
    <a href="@Url.Action("AddNewGroup", "Groups")" class="btn">Add Group</a>
</body>
</html>
