@model ArtistLibrary.Models.Models.DTOs.SolistDetailsDTO

@{
    ViewData["Title"] = "Add Solist Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background: linear-gradient(135deg, #ff7e5f, #feb47b);
            font-family: Arial, sans-serif;
            color: white;
            text-align: center;
            margin: 0;
            padding: 20px;
        }

        h2 {
            font-size: 2.5rem;
            margin-bottom: 40px;
            font-family: Georgia, serif;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
            font-weight: bold;
        }

        .form-group {
            margin-bottom: 1rem;
            text-align: left; /* Alinha os rótulos à esquerda para uma melhor aparência */
        }

            .form-group label {
                display: block;
                margin-bottom: 0.5rem;
            }

        .form-control {
            width: 100%;
            padding: 0.5rem;
            margin-bottom: 0.5rem;
            border: 1px solid #ddd;
            border-radius: 5px;
            background: #333;
            color: white;
        }

        .text-danger {
            color: red;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            border-radius: 25px;
            background-color: #333;
            color: white;
            font-size: 1rem;
            font-weight: bold;
            text-transform: uppercase;
            text-decoration: none;
            transition: background-color 0.3s, box-shadow 0.3s;
            margin-top: 20px;
        }

        .add-btn:hover {
            background-color: #ff6a47;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

        form {
            max-width: 500px;
            margin: 0 auto;
            background: #444;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

        
    </style>
</head>
<body>
    <h2>@ViewData["Title"]</h2>

    <form asp-action="AddSolistDetails" method="post">
        <div class="form-group">
            <label asp-for="SolistRealName">Solist Real Name:</label>
            <input asp-for="SolistRealName" class="form-control" placeholder="Enter real name" />
            <span asp-validation-for="SolistRealName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SolistAnniversary">Solist Anniversary:</label>
            <input asp-for="SolistAnniversary" class="form-control" placeholder="Enter anniversary date" />
            <span asp-validation-for="SolistAnniversary" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SolistNationality">Solist Nationality:</label>
            <input asp-for="SolistNationality" class="form-control" placeholder="Enter nationality" />
            <span asp-validation-for="SolistNationality" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SolistInstagram">Solist Instagram:</label>
            <input asp-for="SolistInstagram" class="form-control" placeholder="Enter Instagram link" />
            <span asp-validation-for="SolistInstagram" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SolistPhoto">Solist Photo (URL):</label>
            <input asp-for="SolistPhoto" class="form-control" placeholder="Enter photo URL" />
            <span asp-validation-for="SolistPhoto" class="text-danger"></span>
        </div>

        <!-- Escondido, mas envia o SolistId -->
        <input type="hidden" asp-for="SolistId" />

        <button type="submit" class="btn">Save Details</button>
    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
