@model ArtistLibrary.Models.Models.DTOs.SolistDetailsDTO

@{
    ViewData["Title"] = "Add Solist Details";
}

<h2>Add Solist Details</h2>

<form asp-action="AddSolistDetails" method="post">
    <div class="form-group">
        <label asp-for="SolistRealName"></label>
        <input asp-for="SolistRealName" class="form-control" />
        <span asp-validation-for="SolistRealName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SolistAnniversary"></label>
        <input asp-for="SolistAnniversary" class="form-control" />
        <span asp-validation-for="SolistAnniversary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SolistNationality"></label>
        <input asp-for="SolistNationality" class="form-control" />
        <span asp-validation-for="SolistNationality" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SolistInstagram"></label>
        <input asp-for="SolistInstagram" class="form-control" />
        <span asp-validation-for="SolistInstagram" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SolistPhoto"></label>
        <input asp-for="SolistPhoto" class="form-control" />
        <span asp-validation-for="SolistPhoto" class="text-danger"></span>
    </div>

    <!-- Escondido, mas envia o SolistId -->
    <input type="hidden" asp-for="SolistId" />

    <button type="submit" class="btn btn-primary">Save Details</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
