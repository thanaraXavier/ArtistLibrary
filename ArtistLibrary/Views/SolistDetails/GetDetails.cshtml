@model ArtistLibrary.Models.Models.SolistDetails

@{
    ViewData["Title"] = "Solist Details";
}

<h2>Details of @Model?.Solist?.SolistName</h2>

@if (Model == null)
{
    <p>No details available for this solist.</p>
    <!-- Botão para adicionar detalhes -->
    <a href="@Url.Action("AddSolistDetails", "SolistDetails", new { solistId = ViewBag.SolistId })" class="btn btn-primary">
        Add Details
    </a>
}
else
{
    <div>
        <h4>Solist Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Real Name</dt>
            <dd class="col-sm-10">@Model.SolistRealName</dd>

            <dt class="col-sm-2">Anniversary</dt>
            <dd class="col-sm-10">@Model.SolistAnniversary</dd>

            <dt class="col-sm-2">Nationality</dt>
            <dd class="col-sm-10">@Model.SolistNationality</dd>

            <dt class="col-sm-2">Instagram</dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.SolistInstagram))
                {
                    <a href="https://www.instagram.com/@Model.SolistInstagram" target="_blank">@Model.SolistInstagram</a>
                }
                else
                {
                    <p>N/A</p>
                }
            </dd>

            <dt class="col-sm-2">Photo</dt>
            <dd class="col-sm-10">
                <img src="@Model.SolistPhoto" alt="@Model.SolistRealName's Photo" width="150" height="150" />
            </dd>
        </dl>
    </div>
}
