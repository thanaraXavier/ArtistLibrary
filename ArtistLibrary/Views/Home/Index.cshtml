@{
    ViewData["Title"] = "Artist Library";
}

<style>
    body {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        margin: 0;
        background: linear-gradient(135deg, #ff7e5f, #feb47b);
        font-family: Arial, sans-serif; /* Fonte consistente para o corpo */
        color: white;
        text-align: center;
        padding: 20px; /* Adiciona um pouco de padding */
    }

    h1 {
        font-size: 2.5rem; /* Tamanho da fonte do título */
        margin-bottom: 25px; /* Espaço aumentado entre o título e os botões */
        font-family: Georgia, serif; /* Fonte do título */
        font-weight: bold; /* Fonte gordinha */
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .button-container {
        display: flex;
        justify-content: center;
        gap: 20px; /* Espaço entre os botões */
        margin-bottom: 30px; /* Espaço abaixo dos botões */
    }

    .btn {
        background-color: #333;
        color: white;
        border: none;
        padding: 8px 18px; /* Aumenta o padding dos botões */
        font-size: 1.3rem; /* Aumenta o tamanho da fonte dos botões */
        font-family: Arial, sans-serif; /* Fonte dos botões */
        font-weight: normal; /* Fonte padrão */
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s ease; /* Adiciona transição para transform */
        border-radius: 5px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        text-decoration: none;
        outline: none; /* Remove a borda azul ao clicar */
    }

        .btn:hover {
            background-color: #555;
            transform: translateY(-3px); /* Leve elevação ao passar o mouse */
        }

    .video-container {
        margin: 2rem auto;
        width: 50%; /* Largura do vídeo */
        height: 0;
        padding-bottom: 28%; /* Proporção do vídeo */
        position: relative;
    }

        .video-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border-radius: 10px;
        }
</style>

<!-- Estrutura HTML -->
<h1>Artist Library</h1>

<div class="button-container">
    <!-- Botão para a página de todos os solistas -->
    <a href="@Url.Action("GetAllSolists", "Solists")" class="btn">Solists</a>

    <!-- Botão para a página de todos os grupos -->
    <a href="@Url.Action("GetAllGroups", "Groups")" class="btn">Groups</a>

    <!-- Botão para a página de álbuns -->
    <a href="@Url.Action("GetAllAlbums", "Album")" class="btn">Albums</a>
</div>

<!-- Vídeo centralizado -->
<div class="video-container">
    <iframe src="https://www.youtube.com/embed/jCzez_q8si0?autoplay=1&mute=1&loop=1&playlist=jCzez_q8si0"
            title="YouTube video player"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
    </iframe>
</div>
